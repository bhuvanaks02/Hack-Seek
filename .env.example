# Production fallback when website goes public
CLAUDE_API_KEY=your_claude_api_key_here

# Final fallback for public deployment
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/hackseek_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=hackseek_db
